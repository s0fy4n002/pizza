<section class="hero">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are You hungry?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Don't wait !</h1>
            <button class="btn-primary px-6 py-2 rounded-full text-white">
                Order Now
            </button>
        </div>
        
        <div class="w-1/2">
            <img src="/img/hero-pizza.png" alt="">
        </div>
    </div>
</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
    <div class="grid lg:grid-cols-4 gap-y-10 gap-x-12 md:gap-x-3 md:grid-cols-3 sm:grid-cols-2">
        <% pizzas.forEach(pizza => { %> 
        <div class="">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= pizza.name %> </h2>
                <span class="size bg-gray-200 py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %> </span>
                <div class="flex items-center justify-around mt-4">
                    <span class="font-bold text-lg">Rp <%= pizza.price %> </span>
                    <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>

        <% }) %> 

       

    </div>
</section>