<section class="login flex justify-center mt-10">
    <div class="w-full max-w-xs">
        <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" method="POST" action="login">
          <% if(message.error){ %> 
            <span class="text-red-500 text-xl"><%= message.error ? message.error : '' %> </span>
            <% } %> 
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
              Email
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="email" type="text" placeholder="Your Email" value="<%= message.email ? message.email:''%>">
          </div>
          <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
              Password
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" name="password" type="password" placeholder="******************" value="<%= message.password ? message.password:''%>">
            <p class="text-red-500 text-xs italic">Please choose a password.</p>
          </div>
          <div class="flex items-center justify-between">
            <button class="btn-primary px-6 py-2 rounded-full text-white font-bold" type="submit">Login</button>
            <a class="inline-block forgot-password align-baseline font-bold text-sm ml-2" href="/register">
              Belum punya akun ? Daftar Sekarang
            </a>
          </div>
        </form>
        <p class="text-center text-gray-500 text-xs">
          &copy;2020 Acme Corp. All rights reserved.
        </p>
      </div>
</section>